@import 'mixins.pcss';

.form {
  &__body {
    align-items: flex-end;
  }
}

.form-item {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}

.form-label {
  order: -1;
  margin-bottom: 5px;
}

.form-error {
  flex: 0 0 100%;
  display: none;
  margin-top: 5px;
  font-size: 12px;
  color: var(--c-error);

  .is-invalid ~ & {
    display: block;
  }
}
