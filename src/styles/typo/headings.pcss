@import '../mixins.pcss';

h1, .h1,
h2, .h2,
h3, .h3,
h4, .h4,
h5, .h5,
h6, .h6 {
  --marginBottom: 40px;
  --tabletFontSize: 32px;
  --mobileFontSize: 24px;

  display: block;
  font-weight: 700;
  line-height: 1.2;

  @media (--tablet) {
    --marginBottom: 30px;

    font-size: var(--tabletFontSize) !important;
  }

  @media (--mobile) {
    --marginBottom: 20px;

    font-size: var(--mobileFontSize) !important;
  }

  &:not(:last-child) {
    margin-bottom: var(--marginBottom);
  }

  &:not(:first-child) {
    margin-top: 40px;
  }
}

h1,
.h1 {
  --tabletFontSize: 32px;
  --mobileFontSize: 24px;

  @mixin fluid-text 42, 24;
}

h2,
.h2 {
  --tabletFontSize: 28px;
  --mobileFontSize: 24px;

  @mixin fluid-text 36, 28;
}

h3,
.h3 {
  --marginBottom: 24px;
  --tabletFontSize: 24px;
  --mobileFontSize: 24px;

  @mixin fluid-text 28, 24;
}

h4,
.h4 {
  --marginBottom: 24px;
  --tabletFontSize: 20px;
  --mobileFontSize: 18px;

  @mixin fluid-text 24, 20;
}

h5,
.h5 {
  --marginBottom: 24px;
  --tabletFontSize: 20px;
  --mobileFontSize: 20px;

  font-size: 20px;
}

h6,
.h6 {
  --marginBottom: 24px;
  --tabletFontSize: 16px;
  --mobileFontSize: 15px;

  font-size: 18px;
}
