<%
const defaults = require('./data.json').data
const params = Object.assign({}, defaults, (data) ? data : {})
const {
	name,
	id,
	type,
	label,
	value,
	disabled,
	checked,
	isShowError,
	required,
	extraClasses,
	extraAttrs,
} = params
%>

<label class="checkbox checkbox--<%= type %>" for="<%= id %>">
	<input
		class="checkbox__input visually-hidden <%= extraClasses %>
		<%= required ? `required data-js-input-required=${type}` : '' %>"
		id="<%= id %>"
		name="<%= name %>"
		type="<%= type %>"
		<%= disabled ? 'disabled' : '' %>
		<%= checked ? 'checked' : '' %>
		value="<%= value %>"
		autocomplete="off"
		tabindex="-1"
		<% if (required) { %>
			data-js-input-required="<%= required %>"
			required
		<% } %>
	>

	<span class="checkbox__emulator">
		<% if (type === 'checkbox') { %>
			<svg class="i-icon">
				<use href="#icon-check"></use>
			</svg>
		<% } %>
	</span>

	<span class="checkbox__label"><%= label %></span>

	<% if (isShowError) { %>
		<span
			class="form-error"
			data-js-form-error-msg="<%= isShowError %>"
		>
      <%= isShowError %>
    </span>
	<% } %>
</label>
