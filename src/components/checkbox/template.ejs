<%
const defaults = require('./data.json').data
const params = (typeof data === 'undefined') ? defaults : {...defaults, ...data}
const {
	extraClasses,
	extraAttrs,
	id,
	name,
	type,
	label,
	value,
	disabled,
	checked,
	isShowError,
	required,
	form,
} = params
%>

<%
let classes = `checkbox checkbox--${type}`

let inputClasses = 'checkbox__input visually-hidden'
if (extraClasses) inputClasses += ` ${extraClasses}`
%>

<label
	class="<%= classes %>"
>
	<input
		class="<%= inputClasses %>"
		id="<%= id %>"
		name="<%= name %>"
		type="<%= type %>"
		value="<%= value %>"
		autocomplete="off"

		<% if (disabled) { %>
			disabled
		<% } %>

		<% if (checked) { %>
			checked
		<% } %>

		<% if (required) { %>
			required
			data-js-input-required="<%= type %>"
		<% } %>
	>

	<span class="checkbox__emulator">
		<% if (type === 'checkbox') { %>
			<svg class="i-icon">
				<use href="#icon-check"></use>
			</svg>
		<% } %>
	</span>

	<span class="checkbox__label"><%= label %></span>

	<% if (isShowError) { %>
		<span
			class="form-error"
			data-js-form-error-msg="<%= isShowError %>"
		>
      <%= isShowError %>
    </span>
	<% } %>
</label>
